<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="appsshoppy.com.whosnext.activities.ConfirmDetailsActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/profilebutton"
        android:scaleType="fitCenter"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The art of shaving"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textColor="#E75737"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <View
        android:layout_width="1508dp"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:id="@+id/line1"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtDate"
        android:padding="10dp"
        android:text="THU,28-MAY-2016,2:00 PM"
        android:textStyle="bold"
        android:textColor="#E75737"
        android:layout_below="@+id/line1"
        android:layout_alignParentStart="true" />


    <View
        android:layout_width="1508dp"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/txtDate"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Details"
        android:textStyle="bold"
        android:textColor="#E75737"
        android:id="@+id/textView5"
        android:layout_below="@+id/txtDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Demo"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/black"
        android:layout_below="@+id/view"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="demo@gmail.com"
        android:textColor="@android:color/black"
        android:id="@+id/textView7"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView6" />

    <View
        android:layout_width="1508dp"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:id="@+id/line3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Have you ever been\nhere before?"
        android:textStyle="bold"
        android:padding="10dp"
        android:lines="2"
        android:textColor="@android:color/black"
        android:id="@+id/textView8"
        android:layout_below="@+id/line3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textStyle="bold"
        android:id="@+id/btnEverBefore"
        android:layout_below="@+id/line3"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="No"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:layout_below="@+id/line3"
        android:layout_toEndOf="@+id/btnEverBefore" />

    <View
        android:layout_width="1508dp"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentStart="true"
        android:id="@+id/line4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/terms_conditions_confirm_details"
        android:id="@+id/checkBox"
        android:layout_below="@+id/line4"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="Send me occassional newsletters and offers"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="1508dp"
        android:background="@android:color/darker_gray"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:id="@+id/line5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payment Methods"
        android:padding="10dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/line5"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:text="Pay at venue"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Pay via Paypal"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="CONFIRM THU,28-MAY-2016,2:00 PM"
        android:id="@+id/btnConfirmPayment"
        android:textColor="@android:color/white"
        android:background="@color/colorOrange"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cancellation Policy"
        android:padding="10dp"
        android:textColor="#2596FB"
        style="@android:style/Widget.Material.Button.Borderless"
        android:id="@+id/btnCancellationPolicy"
        android:layout_below="@+id/btnConfirmPayment"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />

</RelativeLayout>
</ScrollView>
