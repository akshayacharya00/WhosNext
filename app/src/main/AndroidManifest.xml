<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appsshoppy.com.whosnext">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".AppController"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomAppTheme" />
        <activity android:name=".activities.individual.HomeActivityIndividual"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.SignInActivity"
            android:label="@string/title_activity_sign_in">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appsshoppy.com.whosnext.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_sign_up">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appsshoppy.com.whosnext.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ListBusinessActivity"
            android:label="@string/title_activity_list_business">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="appsshoppy.com.whosnext.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.FullDetailsActivity"
            android:label="@string/title_activity_full_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.PickUpDateTimeActivity"
            android:label="@string/title_activity_pick_up_date_time"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activities.ConfirmDetailsActivity" />
        <activity android:name=".activities.PaymentDetailsActivity"
            android:theme="@style/grayAppBar"></activity>
        <activity android:name=".activities.ThankYouActivity" />
        <activity android:name=".activities.MyBookingActivity" />
        <activity android:name=".activities.individual.ServicesActivity">

            </activity>
        <activity android:name=".activities.individual.AddNewServicesActivity"/>
        <activity android:name=".activities.individual.ServicesPricingActivity"/>
        <activity android:name=".activities.individual.ServicesDistributionActivity"/>
        <activity android:name=".activities.individual.ServicesDescriptionActivity"/>
        <activity android:name=".activities.business.BusinessInformationActivity" />
        <activity android:name=".activities.business.BusinessChangePasswordActivity" />
        <activity android:name=".activities.business.BusinessMyAccountActivity">
        </activity>
        <activity android:name=".activities.business.BusinessPaymentDetailsActivity" />
        <activity android:name=".activities.business.BusinessUploadPhotosActivity" />
        <activity android:name=".activities.business.BusinessOpeningHoursActivity">
        </activity>
        <activity android:name=".activities.business.BusinessFeesPolicyActivity">
        </activity>
        <activity android:name=".activities.business.BusinessDashboardActivity">
        </activity>
        <activity android:name=".activities.business.BusinessStaffActivity">
        </activity>
        <activity android:name=".activities.business.BusinessBookingActivity">
        </activity>
        <activity android:name=".activities.business.BusinessCancelBookingActivity" />
        <activity android:name=".activities.business.BusinessCategoriesActivity" />
