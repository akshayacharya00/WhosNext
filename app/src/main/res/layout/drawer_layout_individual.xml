<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@drawable/signbanner">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="70"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:src="@drawable/avtarbox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Unisex Salon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="@android:color/holo_orange_light"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="London, Uk"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="@drawable/sidebarbackground">

        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/searchbarround"
            android:layout_margin="10dp"
            android:padding="5dp" >

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgSearch"
                android:background="#00000000"
                android:ems="10"/>

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/searchbutton" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/profilebutton"
                        android:id="@+id/btnProfile" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Profile"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/bookingbuttons"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Bookings"/>
                    </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:weightSum="1000"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="match_parent"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_height="0dp"
                            android:layout_weight="700"
                            android:scaleType="centerInside"
                            android:src="@drawable/categoriesbuttons"
                            android:id="@+id/btnCategories" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="300"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Categories"/>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/staffbutton"
                        android:id="@+id/btnServices" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Services"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/openinghoursbutton"
                        android:id="@+id/btnOpeningHours" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Opening Time"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/feespoliciesbutton"
                        android:id="@+id/btnFeePolicy" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Fee Policies"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/reviewsbutton"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Customer Reviews"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/notificationbutton"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Notifications"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:weightSum="1000"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_height="0dp"
                        android:layout_weight="700"
                        android:scaleType="centerInside"
                        android:src="@drawable/logoutbutton"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="300"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Logout"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>