<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_weight="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/menhairstyle"
        android:layout_weight="8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Hair cut by creative director"
            android:background="#80000000"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_weight="2">

        <Button
            android:layout_width="0dp"
            android:layout_weight="50"
            android:text="YOUR COMMENT"
            android:layout_gravity="left"
            android:background="#E75737"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="50"
            android:drawablePadding="-30dp"
            android:drawableLeft="@drawable/ic_menu_share"
            android:text="SHARE THIS"
            android:layout_margin="5dp"
            android:background="#2596FB"
            android:layout_gravity="right"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />



    </LinearLayout>



</LinearLayout>